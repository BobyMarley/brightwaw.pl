rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ================= HELPER FUNCTIONS =================
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null &&
             (request.auth.token.email.matches('.*plenkanet.*') || 
              request.auth.token.email == 'maptonavigation@gmail.com'); 
    }

    function isWorker() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/workers/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/workers/$(request.auth.uid)).data.email == request.auth.token.email;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ================= USERS COLLECTION =================
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // ================= WORKERS COLLECTION =================
    match /workers/{workerId} {
      // Любой авторизованный может читать для определения роли
      allow read: if request.auth != null;
      // Админ может редактировать любое поле
      allow write: if isAdmin();
      // Работник может создать свой документ при регистрации
      allow create: if isAdmin() || 
                       (request.auth != null && 
                        request.auth.uid == workerId && 
                        request.resource.data.email == request.auth.token.email);
      // Только работник может редактировать свой профиль
      allow update: if request.auth != null && 
                       request.auth.token.email == resource.data.email &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['name', 'phone', 'telegram', 'whatsapp', 'photo', 'availability', 'updatedAt']);
    }

    // ================= ORDERS COLLECTION =================
    match /orders/{orderId} {
      // Создание заказа - любой авторизованный пользователь или для тестирования
      allow create: if request.auth != null || 
                       (request.resource.data.userId == "test-user-123");

      // Чтение заказов - любой авторизованный может читать
      allow read: if request.auth != null;

      // Обновление заказов
      allow update: if isAdmin() ||
                       (request.auth != null && request.auth.uid == resource.data.userId) ||
                       (isWorker() && canWorkerUpdateOrder());
      
      allow delete: if isAdmin();
    }

    function canWorkerUpdateOrder() {
      let allowedFields = ['assignedWorkerId', 'assignedWorkerName', 'assignedWorkers', 'workerStatus', 'status', 'updatedAt', 'assignmentHistory', 'customerRating'];
      return (resource.data.assignedWorkerId == null && request.resource.data.assignedWorkerId == request.auth.uid) ||
             (resource.data.assignedWorkerId == request.auth.uid) ||
             (resource.data.assignedWorkers != null && request.auth.uid in resource.data.assignedWorkers) &&
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(allowedFields);
    }

    // ================= ОСТАЛЬНЫЕ КОЛЛЕКЦИИ БЕЗ ИЗМЕНЕНИЙ =================
    match /invite_codes/{codeId} {
      allow read: if true; 
      allow update: if isAdmin() || 
                       (request.auth != null &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['usedCount', 'usedBy', 'lastUsedAt', 'lastUsedBy', 'isActive'])); 
      allow create, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow read: if (resource.data.isApproved == true && resource.data.isPublished == true) ||
                     (request.auth != null && request.auth.uid == resource.data.userId) ||
                     isAdmin();
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId &&
                       request.resource.data.isApproved == false &&
                       request.resource.data.isPublished == false;
      allow update: if isAdmin() ||
                       (request.auth != null && 
                        request.auth.uid == resource.data.userId &&
                        resource.data.isApproved == false);
      allow delete: if isAdmin(); 
    }

    // ================= УПРОЩЕННЫЕ СЛОТЫ =================
    match /availableSlots/{slotId} {
      allow read: if true; 
      allow create, delete: if isAdmin();
      // Упрощаем правило обновления
      allow update: if isAdmin() ||
                       (request.auth != null && 
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['bookedCount', 'isFullyBooked', 'updatedAt'])); 
    }
    
    match /workerAvailabilityTemplates/{templateId} {
      allow read, write: if isAdmin() ||
                            (request.auth != null && 
                             (request.auth.uid == templateId || request.auth.uid == resource.data.workerId));
    }

    // УБИРАЕМ availableDates если не используется
    // match /availableDates/{document} { ... }

    match /notifications/{notificationId} {
      allow read: if isAdmin() ||
                     (request.auth != null && request.auth.uid == resource.data.userId);
      allow create: if request.auth != null; 
      allow update: if isAdmin() ||
                       (request.auth != null && 
                        request.auth.uid == resource.data.userId &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['isRead', 'readAt']));
      allow delete: if isAdmin();
    }
    
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /systemLogs/{logId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }
    
    // ================= CHAT SYSTEM =================
    match /chats/{chatId} {
      allow read, create, update: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.senderId;
      allow delete: if isAdmin();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}